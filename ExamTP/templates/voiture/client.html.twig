{# templates/voiture/client.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Cars{% endblock %}

{% block body %}
    <h1>List of Cars</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Categorie</th>
                <th>Loan</th>
            </tr>
        </thead>
        <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.libelle }}</td>
                    <td>{{ voiture.categorie }}</td>
                    <td>
                        {% if voiture.disp %}
                            <a href="{{ path('loanvoiture', {'id': voiture.id}) }}" class="btn btn-primary">Loan</a>
                        {% else %}
                            <span>Not Available</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
